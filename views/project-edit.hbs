<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../data/image/logo.png">
    <title>Edit Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="../data/css/nav.css">
    <link rel="stylesheet" href="../data/css/project.css">
</head>

<body>
    <!-- Start Navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            {{#if isLogin}}
            <a class="navbar-brand ms-2" href="/profile/{{user.id}}">
                <img src="../data/image/logo.png" alt="" style="width: 50px;">
            </a>
            {{/if}}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse hovers" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover active" href="/#back"><i class="fa-solid fa-arrow-left"></i> Back</a>
                    </li>
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover active" href="/project">Add Project</a>
                    </li>
                </ul>
                {{#if isLogin}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="/uploadImage/{{user.image}}" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="/uploadImage/{{user.image}}" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">{{user.name}} <br> {{user.email}}</p>
                        </li>
                        <li><hr></li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile/{{user.id}}">
                                <i class="fa-solid fa-user me-2"></i> Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile-edit/{{user.id}}">
                                <i class="fa-solid fa-user-doctor me-2"></i> Edit Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="">
                                <i class="fa-solid fa-lock me-2"></i> Change Password
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/contact">
                                <i class="fa-solid fa-address-book me-2"></i> Contact Me
                            </a>
                        </li>
                        <li><hr></li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/logout">
                                <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
                {{else}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="../data/image/none.jpg" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="../data/image/none.jpg" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">Not Listed <br> Not Listed@game.com</p>
                        </li>
                        <li><hr></li>
                        <li class="ms-3 mb-2 d-flex gap-4">
                            <a class="text-decoration-none text-dark contact" href="/register">
                                <i class="fa-solid fa-lock me-2"></i> Register
                            </a>
                            <a class="text-decoration-none text-dark contact" href="/login">
                                <i class="fa-solid fa-address-book me-2"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </div>
        </div>
    </nav>

    <!-- End Navbar -->
    <!-- Start Project Form -->

    <form action="/edit/{{data.id}}" method="POST" enctype="multipart/form-data" class="form pb-5 mb-5" id="form" autocomplete="off">
        <h1 class="text-center fw-semibold">Edit Project</h1>
        <div class="w-50 m-auto fs-5 fw-bold">
            <div class="mb-4 mt-5">
                <label for="inputProject" class="form-label">Project Name</label>
                <input type="text" class="form-control" name="project" value="{{data.title}}">
            </div>
            <div class="row mb-4">
                <div class="col">
                    <label for="inputStartDate">Start Date</label>
                    <input type="date" class="form-control" id="inputStartDate" name="startDate" value="{{data.start_date}}">
                </div>
                <div class="col">
                    <label for="inputEndDate">End Date</label>
                    <input type="date" class="form-control" id="inputEndDate" name="endDate" value="{{data.end_date}}">
                </div>
            </div>
            <div class="mb-4">
                <label for="inputDescription">Description</label>
                <textarea class="form-control" style="height: 100px" name="description">{{data.description}}</textarea>
            </div>
            <div class="mb-4">
                <label for="">Technologies</label>
                <div class="flex-check">
                    <div class="flex-box">
                        <label for="swift"><input type="checkbox" class="me-2" id="swift" name="swift" {{#if data.is_swift}}checked{{/if}}>Swift</label>
                        <label for="ruby"><input type="checkbox" class="me-2" id="ruby" name="ruby" {{#if data.is_ruby}}checked{{/if}}>Ruby</label>
                    </div>
                    <div class="flex-box">
                        <label for="phyton"><input type="checkbox" class="me-2" id="phyton" name="python" {{#if data.is_python}}checked{{/if}}>Phyton</label>
                        <label for="javascript"><input type="checkbox" class="me-2" id="javascript" name="javascript" {{#if data.is_javascript}}checked{{/if}}>Javascript</label>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="inputImage" class="form-label">Upload Image</label>
                <input class="form-control" type="file" id="inputImage" name="image" value="{{data.image}}">
            </div>
            <button class="btn btn-dark float-end fw-bold my-3 px-4 rounded-pill submit">Edit Project</button>
        </div>
    </form>

    <!-- End Project Form -->
    <!-- Start Script -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    {{!-- <script src="../data/js/project.js"></script> --}}

    <!-- End Script -->
</body>

</html>