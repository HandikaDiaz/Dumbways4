<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../data/image/logo.png">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="../data/css/nav.css">
</head>

<body>
    <!-- Start Navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            {{#if isLogin}}
            <a class="navbar-brand ms-2" href="/profile/{{user.id}}">
                <img src="../data/image/logo.png" alt="" style="width: 50px;">
            </a>
            {{/if}}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse hovers" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover" href="/">Home</a>
                    </li>
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover" href="/project">Project</a>
                    </li>
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover" href="/testimonial">Testimonial</a>
                    </li>
                </ul>
                {{#if isLogin}}
                <div class="btn-group end-btnn">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="/uploadImage/{{user.image}}" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="/uploadImage/{{user.image}}" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">{{user.name}} <br> {{user.email}}</p>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile/{{user.id}}">
                                <i class="fa-solid fa-user me-2"></i> Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile-edit/{{user.id}}">
                                <i class="fa-solid fa-user-doctor me-2"></i> Edit Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="">
                                <i class="fa-solid fa-lock me-2"></i> Change Password
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/contact">
                                <i class="fa-solid fa-address-book me-2"></i> Contact Me
                            </a>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/logout">
                                <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
                {{else}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="../data/image/none.jpg" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="../data/image/none.jpg" class="rounded-circle" style="width: 50px; height: 50px"
                                alt="...">
                            <p class="ms-3">Not Listed <br> Not Listed@game.com</p>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-3 mb-2 d-flex gap-4">
                            <a class="text-decoration-none text-dark contact" href="/register">
                                <i class="fa-solid fa-lock me-2"></i> Register
                            </a>
                            <a class="text-decoration-none text-dark contact" href="/login">
                                <i class="fa-solid fa-address-book me-2"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </div>
        </div>
    </nav>

    <!-- End Navbar -->
    <!-- Start Card -->

    {{#if isLogin}}
    <div class="card m-auto mt-5 shadow-lg p-4 mb-5 bg-body-tertiary rounded-3 border-0" style="max-width: 70%;">
        <div class="row g-0">
            <div class="col-md-4 card shadow bg-body-tertiary rounded border-0">
                <img src="/uploadImage/{{user.image}}" class="img-fluid rounded-top" style="height: 100%;">
                <h5 class="text-center fw-bold mt-3">{{user.name}}</h5>
                <p class="text-center">{{user.position}}</p>
            </div>
            <div class="col-md-8 d-flex align-items-center">
                <div class="card-body">
                    <table class="ms-5 fs-5">
                        <tbody>
                            <tr>
                                <td>======</td>
                                <td></td>
                                <td>=================</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Name</td>
                                <td class="fw-bold ps-5">:</td>
                                <td class="ps-4">{{user.name}}</td>
                            </tr>
                            <tr>
                                <td>======</td>
                                <td></td>
                                <td>=================</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Age</td>
                                <td class="fw-bold ps-5">:</td>
                                <td class="ps-4">{{user.age}}</td>
                            </tr>
                            <tr>
                                <td>======</td>
                                <td></td>
                                <td>=================</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Position</td>
                                <td class="fw-bold ps-5">:</td>
                                <td class="ps-4">{{user.position}}</td>
                            </tr>
                            <tr>
                                <td>======</td>
                                <td></td>
                                <td>=================</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">City</td>
                                <td class="fw-bold ps-5">:</td>
                                <td class="ps-4">{{user.city}}</td>
                            </tr>
                            <tr>
                                <td>======</td>
                                <td></td>
                                <td>=================</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Hobby</td>
                                <td class="fw-bold ps-5">:</td>
                                <td class="ps-4">{{user.hoby}}</td>
                            </tr>
                            <tr>
                                <td>======</td>
                                <td></td>
                                <td>=================</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    <!-- End Card -->
    <!-- Start Script -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <!-- End Script -->
</body>

</html>