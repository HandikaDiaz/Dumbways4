<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../data/image/logo.png">
    <title>Contact</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="../data/css/nav.css">
    <link rel="stylesheet" href="../data/css/contact.css">
</head>

<body>
    <!-- Start Navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            {{#if isLogin}}
            <a class="navbar-brand ms-2" href="/profile/{{renderUser.id}}">
                <img src="../data/image/logo.png" alt="" style="width: 50px;">
            </a>
            {{/if}}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse hovers" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover active" href="/"><i class="fa-solid fa-arrow-left"></i> Back</a>
                    </li>
                </ul>
                {{#if isLogin}}
                <div class="btn-group end-btn">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="fa-solid fa-inbox fs-5"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px; height: 95px;">
                        <li>
                            <p class="text-center mt-4">You don't have a message</p>
                        </li>
                    </ul>
                </div>
                <div class="btn-group end-btn">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="/uploadImage/{{renderUser.image}}" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="/uploadImage/{{renderUser.image}}" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">{{renderUser.name}} <br> {{renderUser.email}}</p>
                        </li>
                        <li><hr></li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile/{{renderUser.id}}">
                                <i class="fa-solid fa-user me-2"></i> Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile-edit/{{renderUser.id}}">
                                <i class="fa-solid fa-user-doctor me-2"></i> Edit Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/change">
                                <i class="fa-solid fa-lock me-2"></i> Change Password
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/contact">
                                <i class="fa-solid fa-address-book me-2"></i> Contact Me
                            </a>
                        </li>
                        <li><hr></li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/logout">
                                <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
                {{else}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="../data/image/none.jpg" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="../data/image/none.jpg" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">Not Listed <br> Not Listed@game.com</p>
                        </li>
                        <li><hr></li>
                        <li class="ms-3 mb-2 d-flex gap-4">
                            <a class="text-decoration-none text-dark contact" href="/register">
                                <i class="fa-solid fa-lock me-2"></i> Register
                            </a>
                            <a class="text-decoration-none text-dark contact" href="/login">
                                <i class="fa-solid fa-address-book me-2"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </div>
        </div>
    </nav>

    <!-- End Navbar -->
    <!-- Start Contact Form -->

    <form action="/profile-edit/{{user.id}}" method="POST" enctype="multipart/form-data" id="form" autocomplete="off">
        <h1 class="text-center fw-semibold mt-4">Edit Your Profile</h1>
        <div class="w-50 m-auto fs-5 fw-bold">
            <div class="mb-4 mt-5">
                <label for="inputName" class="form-label">Name</label>
                <input class="form-control" id="inputName" type="text" placeholder="Your Name" name="name" value="{{data.name}}">
            </div>
            <div class="mb-4 mt-4">
                <label for="inputAge" class="form-label">Age</label>
                <input class="form-control" id="inputAge" type="text" placeholder="Your Age" name="age" value="{{data.age}}">
            </div>  
            <div class="mb-4 mt-4">
                <label for="inputSelect" class="form-label">Position</label>
                <select class="form-select" id="inputSelect" aria-label="Floating label select example" name="position">
                    <option hidden>Your Position</option>
                    <option value="Fullstack Developer">Fullstack Developer</option>
                    <option value="FrontEnd Developer">FrontEnd Developer</option>
                    <option value="BackEnd Developer">BackEnd Developer</option>
                </select>
            </div>
            <div class="mb-4 mt-4">
                <label for="inputEmail" class="form-label">City</label>
                <input class="form-control" id="inputEmail" type="text" placeholder="Your City" name="city" value="{{data.city}}">
            </div>
            <div class="mb-4 mt-4">
                <label for="inputNumber" class="form-label">Hoby</label>
                <input class="form-control" id="inputNumber" type="text" placeholder="Your Hoby" name="hoby" value="{{data.hoby}}">
            </div>
            <div class="mb-3">
                <label for="inputImage" class="form-label">Upload Image</label>
                <input class="form-control" type="file" id="inputImage" name="image" value="{{data.image}}">
            </div>
            <button class="btn btn-dark float-end fw-bold my-3 px-4 rounded-pill submit">Edit Profile</button>
        </div>
    </form>

    <!-- End Contact Form -->














    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>