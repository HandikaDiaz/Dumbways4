<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../data/image/logo.png">
    <title>Detail Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="../data/css/nav.css">

</head>

<body>
    <!-- Start Navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand ms-2" href="/profile">
                <img src="../data/image/logo.png" alt="" style="width: 50px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse hovers" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover active" href="/#back">
                            <i class="fa-solid fa-arrow-left"></i> Back
                        </a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover active" href="/project">
                            Add More Projects
                        </a>
                    </li>
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover active" href="/edit/{{data.id}}">
                            Edit Project
                        </a>
                    </li>
                    {{/if}}
                </ul>
                {{#if isLogin}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="/uploadImage/{{user.image}}" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="/uploadImage/{{user.image}}" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">{{user.name}} <br> {{user.email}}</p>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile">
                                <i class="fa-solid fa-user me-2"></i> Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="">
                                <i class="fa-solid fa-lock me-2"></i> Change Password
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/contact">
                                <i class="fa-solid fa-address-book me-2"></i> Contact Me
                            </a>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/logout">
                                <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
                {{else}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="../data/image/none.jpg" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="../data/image/none.jpg" class="rounded-circle" style="width: 50px; height: 50px"
                                alt="...">
                            <p class="ms-3">Not Listed <br> Not Listed@game.com</p>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-3 mb-2 d-flex gap-4">
                            <a class="text-decoration-none text-dark contact" href="/register">
                                <i class="fa-solid fa-lock me-2"></i> Register
                            </a>
                            <a class="text-decoration-none text-dark contact" href="/login">
                                <i class="fa-solid fa-address-book me-2"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </div>
        </div>
    </nav>

    <!-- End Navbar -->
    <!-- Project Detail Card -->
    {{#if isLogin}}
    <h1 class="text-center fw-semibold my-5">{{data.title}}</h1>
    <div class="mx-auto">
        <div class="m-auto bg-transparent" style="max-width: 1100px;">
            <div class="row g-0">
                <div class="col-md-4 mx-auto mb-4" style="width: 570px;">
                    <img src="../data/image/cyborg.jpg" class="img-fluid rounded-start" style="width: 1000px;"
                        alt="...">
                </div>
                <div class="col-md-5 ms-5 row align-items-center">
                    <div class="card-body mb-3">
                        <h5 class="card-title">Duration</h5>
                        <p class="card-text"><i class="fa-solid fa-calendar-days fa-beat mt-3 me-3"
                                style="font-size: 30px;"></i>{{data.start_date}} | {{data.end_date}}</p>
                        <p class="card-text"><i class="fa-solid fa-clock fa-beat me-2" style="font-size: 30px;"></i> 15
                            day
                        </p>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Technologies</h5>
                        <div class="grid gap-3 fs-2">
                            {{{data.is_swift}}}
                            {{{data.is_ruby}}}
                            {{{data.is_python}}}
                            {{{data.is_javascript}}}
                        </div>
                    </div>
                </div>
            </div>
            <div style="margin-left: 60px;">
                <p class="card-text my-5" style="text-align: justify;">{{data.description}}</p>
            </div>
        </div>
    </div>
    {{/if}}

    <!-- Project Detail Card -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>