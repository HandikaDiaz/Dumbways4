<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="image/icon.jpg">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="../data/css/nav.css">
    <link rel="stylesheet" href="../data/css/contact.css">
</head>

<body>
    <!-- Start Navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand ms-2" href="/profile">
                <img src="../data/image/logo.png" alt="" style="width: 50px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse hovers" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover active" href="/">
                            <i class="fa-solid fa-arrow-left"></i> Back
                        </a>
                    </li>
                </ul>
                {{#if isLogin}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="/uploadImage/{{user.image}}" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="/uploadImage/{{user.image}}" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">{{user.name}} <br> {{user.email}}</p>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile">
                                <i class="fa-solid fa-user me-2"></i> Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="">
                                <i class="fa-solid fa-lock me-2"></i> Change Password
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/contact">
                                <i class="fa-solid fa-address-book me-2"></i> Contact Me
                            </a>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/logout">
                                <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
                {{else}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="../data/image/none.jpg" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="../data/image/none.jpg" class="rounded-circle" style="width: 50px; height: 50px"
                                alt="...">
                            <p class="ms-3">Not Listed <br> Not Listed@game.com</p>
                        </li>
                        <li>
                            <hr>
                        </li>
                        <li class="ms-3 mb-2 d-flex gap-4">
                            <a class="text-decoration-none text-dark contact" href="/register">
                                <i class="fa-solid fa-lock me-2"></i> Register
                            </a>
                            <a class="text-decoration-none text-dark contact" href="/login">
                                <i class="fa-solid fa-address-book me-2"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </div>
        </div>
    </nav>

    <!-- End Navbar -->
    <!-- Start Contact Form -->

    <form class="mt-5 card w-50 mx-auto rounded-4 shadow p-3 mb-5 bg-body-tertiary border-white" action="/login" method="post">
        <h1 class="text-center fw-semibold mt-4">Change Password</h1>
        <div class="w-75 mx-auto mb-4 fs-5 fw-bold">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Old Password</label>
                <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Your Password" required>
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">New Password</label>
                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Your New Password" required>
            </div>
            <div style="font-size: 15px; justify-content: space-between;" class="d-flex my-3">
                <div class="d-flex">
                    <input class="bg-white shadow-none me-1" type="checkbox" id="me">
                    <label for="me">Remember Me</label>
                </div>
            </div>
            <button type="submit" class="btn btn-dark my-3 w-100 submit">Change Password</button>
        </div>
    </form>

    <!-- End Contact Form -->














    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>