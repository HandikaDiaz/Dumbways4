<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../data/image/logo.png">
    <title>Testimonial</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="../data/css/nav.css">
    <link rel="stylesheet" href="../data/css/testimonial.css">
</head>

<body>
    <!-- Start Navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            {{#if isLogin}}
            <a class="navbar-brand ms-2" href="/profile/{{renderUser.id}}">
                <img src="../data/image/logo.png" alt="" style="width: 50px;">
            </a>
            {{/if}}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse hovers" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover" href="/">Home</a>
                    </li>
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover" href="/project">Project</a>
                    </li>
                    <li class="nav-item fs-5 ms-2">
                        <a class="nav-link hovers hover active" href="/testimonial">Testimonial</a>
                    </li>
                </ul>
                {{#if isLogin}}
                <div class="btn-group end-btn">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="fa-solid fa-inbox fs-5"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px; height: 95px;">
                        <li>
                            <p class="text-center mt-4">You don't have a message</p>
                        </li>
                    </ul>
                </div>
                <div class="btn-group end-btn">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="/uploadImage/{{renderUser.image}}" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="/uploadImage/{{renderUser.image}}" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">{{renderUser.name}} <br> {{renderUser.email}}</p>
                        </li>
                        <li><hr></li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile/{{renderUser.id}}">
                                <i class="fa-solid fa-user me-2"></i> Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/profile-edit/{{renderUser.id}}">
                                <i class="fa-solid fa-user-doctor me-2"></i> Edit Profile
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/change">
                                <i class="fa-solid fa-lock me-2"></i> Change Password
                            </a>
                        </li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/contact">
                                <i class="fa-solid fa-address-book me-2"></i> Contact Me
                            </a>
                        </li>
                        <li><hr></li>
                        <li class="ms-2 mb-2">
                            <a class="text-decoration-none text-dark contact" href="/logout">
                                <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
                {{else}}
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <img src="../data/image/none.jpg" class="rounded-circle" style="width: 30px; height: 30px"
                            alt="...">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="width: 250px;">
                        <li class="d-flex ms-2 mt-3">
                            <img src="../data/image/none.jpg" class="rounded-circle"
                                style="width: 50px; height: 50px" alt="...">
                            <p class="ms-3">Not Listed <br> Not Listed@game.com</p>
                        </li>
                        <li><hr></li>
                        <li class="ms-3 mb-2 d-flex gap-4">
                            <a class="text-decoration-none text-dark contact" href="/register">
                                <i class="fa-solid fa-lock me-2"></i> Register
                            </a>
                            <a class="text-decoration-none text-dark contact" href="/login">
                                <i class="fa-solid fa-address-book me-2"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </div>
        </div>
    </nav>

    <!-- End Navbar -->
    <!-- Testimonial -->

    <div>
        <h2 class="text-center text-uppercase mt-5 fw-semibold">My Testimonial</h2>
        <h4 class="text-center my-4">Rating By Star</h4>
        <div class="text-center test-hov">
            <button onclick="allTestimonial()" type="button" class="btn btn-dark px-4 fw-semibold">All</button>
            <button onclick="testimonialFilter(1)" type="button" class="btn btn-dark px-3 fw-semibold">1 <i
                    class="fa-regular fa-star fa-beat"></i></button>
            <button onclick="testimonialFilter(2)" type="button" class="btn btn-dark px-3 fw-semibold">2 <i
                    class="fa-regular fa-star fa-beat"></i></button>
            <button onclick="testimonialFilter(3)" type="button" class="btn btn-dark px-3 fw-semibold">3 <i
                    class="fa-regular fa-star fa-beat"></i></button>
            <button onclick="testimonialFilter(4)" type="button" class="btn btn-dark px-3 fw-semibold">4 <i
                    class="fa-regular fa-star fa-beat"></i></button>
            <button onclick="testimonialFilter(5)" type="button" class="btn btn-dark px-3 fw-semibold">5 <i
                    class="fa-regular fa-star fa-beat"></i></button>
        </div>
        <section class="section-card" id="section-card"></section>
    </div>

    <!-- Testimonial -->
    <!-- Start Script -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="../data/js/testimonial.js"></script>

    <!-- End Script -->
</body>

</html>